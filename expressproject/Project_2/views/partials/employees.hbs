<div class="container">

    <div class="card">
        <div class="card-body">
            <div class="col-sm-3 col-md-8 col-lg-10">
                <h3>Employee Table</h3>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="col-sm-6 col-md-9 col-lg-12">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Employee ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Address</th>
                            <th>Contact</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each employees}}
                        <tr>
                            <td>{{EmployeeID}}</td>
                            <td>{{EmpFN}}</td>
                            <td>{{EmpLN}}</td>
                            <td>{{Address}}</td>
                            <td>{{PhNo}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>